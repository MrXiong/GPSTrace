<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_nav_line_top"
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/icon_node_bottom"
                android:src="@mipmap/icon_node_bottom"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_item_node_top"
                 />
            <ImageView
                android:id="@+id/iv_nav_line_bottom"
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/icon_node_bottom"
                android:src="@mipmap/icon_node_bottom"
                 />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_node_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           >

            <TextView
                android:id="@+id/tv_node_name"
                android:background="@drawable/selector_node"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="32dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="13dp"
                android:drawableRight="@mipmap/icon_nav_right"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#05a8f3"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
